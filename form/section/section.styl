.mdl-ui-section
  .header
    display flex
    border-bottom 1px solid rgba(0,0,0, 0.12)

    .title
      align-self center

  .label
    align-self center
    font-size 12px
    color rgba(0,0,0, 0.12)

  > div.mdl-grid > div.content-header.mdl-cell
    margin 8px 8px 0 0
    border-right 1px solid rgba(0,0,0, 0.12)

  > div.mdl-grid > div.content.mdl-cell
    margin-right 8px
    border-right 1px solid rgba(0,0,0, 0.12)
    border-bottom 1px solid rgba(0,0,0, 0.12)

  .section.material-icons
    font-size 16px

  .overlay-wrapper
    position relative
    z-index 0

  .overlay
    position absolute
    background-color: rgba(0,0,0, 0.12)
    top 0
    bottom 0
    left 0
    right 0
    z-index 1000

