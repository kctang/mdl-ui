.mdlSection {
    border: 1px solid rgba(0, 0, 0, 0.2);
    align-content: flex-start;
}

.mdlSection--entry-header {
    display: flex;
    align-items: center;
}

.mdlSection--entry-index-label {
    color: rgba(0, 0, 0, 0.2);
    padding-left: 8px;
}

.mdlSectionMarked {
    color: red;
}

.mdlSection--overlay-wrapper {
    position: relative;
    z-index: 0;
}

.mdlSection--overlay {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1000;
}
